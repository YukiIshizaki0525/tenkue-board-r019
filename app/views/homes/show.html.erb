<div class="contents row">
  <div class="content_post" style="background-image: url(<%= @home.image %>);">
    <div class="more">
      <span><%= image_tag 'arrow_top.png' %></span>
      <ul class="more_list">
        
        <li>
          <%= link_to '編集', edit_home_path(@home.id), method: :get %>
        </li>
        <li>
          <%= link_to '削除', home_path(@home.id), method: :delete %>
        </li>
      </ul>
    </div>
    <p><%= @home.text %></p>
    <span class="name"><%= @home.name %>
    </span>
  </div>
</div>