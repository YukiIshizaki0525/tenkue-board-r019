<%= render 'shared/error_messages' %>

<%= form_with(model: @board, local: true) do |f| %>
  <div class="form_area">
    <div class="form_area__field">
      <% f.hidden_field :user_id %>
      <%= f.text_area :content, rows: 10, placeholder: "投稿内容を入力" %>
    </div>

    <div class="form_area__action">
      <%= f.submit '更新する', class: 'form_area__action__btn' %>
    </div>
  </div>
<% end %>

<div class="back_link">
  <%= link_to :back do %>
    <button>一覧に戻る</button>
  <% end %>
</div>
