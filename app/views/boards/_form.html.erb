<%= render 'shared/error_messages' %>

<%= form_for board do |f| %>
  <div class="form_area">
    <div class="form_area__field">
      <%= f.text_area :content, rows: 10, placeholder: "投稿内容を入力" %>
    </div>
  
    <div class="form_area__action">
      <%= f.submit '投稿', class: 'form_area__action__btn' %>
    </div>
  </div>
<% end %>