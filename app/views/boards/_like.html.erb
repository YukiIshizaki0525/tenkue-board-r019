<% if current_user.already_likes?(board) %>
  <%= link_to board_likes_path(board), method: :delete, remote: true do %>
    <i class="fas fa-heart"></i>
    <span><%= board.likes.length %></span>
  <% end %>
<% else %>
  <%= link_to board_likes_path(board), method: :post, remote: true do %>
    <i class="far fa-heart"></i>
    <span><%= board.likes.length %></span>
  <% end %>
<% end %>