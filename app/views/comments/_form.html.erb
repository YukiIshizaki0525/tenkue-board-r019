
<div class="comment_area__form_box">
  <%= form_with(model:[@board, @comment], method: :post, local: true, class: "comment_area__form_box__form") do |f| %>
    <%= f.hidden_field :board_id, value: @board.id %>
    <%= f.hidden_field :user_id, value: current_user.id %>
    <div class="comment_area__form_box__form__field">
      <%= f.text_area :comment, placeholder: "コメントを入力", class: 'comment__area' %>
    </div>
    <div class="comment_area__form_box__form__action">
      <%= f.button "送信" , class:"comment_area__form_box__form__action__btn"%>
    </div>
  <% end %>
</div>
